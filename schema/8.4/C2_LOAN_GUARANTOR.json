{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/fecgov/fecfile-validate/blob/main/schema/C2_LOAN_GUARANTOR.json",
  "version": "8.3.0.1",
  "title": "C2 Loan Guarantor",
  "description": "SCHEDULE C2 - LOAN GUARANTOR NAME & ADDRESS INFORMATION (SUPPLEMENTARY FOR INFORMATION FOUND ON SCHEDULE C)",
  "type": "object",
  "required": [
    "form_type",
    "filer_committee_id_number",
    "transaction_type_identifier",
    "transaction_id",
    "back_reference_tran_id_number",
    "guarantor_last_name",
    "guarantor_first_name",
    "guarantor_street_1",
    "guarantor_city",
    "guarantor_state",
    "guarantor_zip",
    "guaranteed_amount"
  ],
  "properties": {
    "report_type": {
      "title": "REPORT TYPE",
      "description": "",
      "type": "string",
      "maxLength": 5,
      "examples": ["F3X"],
      "fec_spec": {
        "FIELD_DESCRIPTION": "REPORT TYPE",
        "TYPE": "A/N-100",
        "SAMPLE DATA": "F3X",
        "VALUE REFERENCE": null,
        "RULE REFERENCE": null,
        "FIELD_FORM_ASSOCIATION": null
      }
    },
    "form_type": {
      "title": "FORM TYPE",
      "description": "",
      "enum": ["SC2/9", "SC2/10"],
      "examples": ["SC2/10"],
      "fec_spec": {
        "COL_SEQ": 1,
        "FIELD_DESCRIPTION": "FORM TYPE",
        "TYPE": "A/N-8",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "SC2/10",
        "VALUE_REFERENCE": "SC2/10",
        "RULE_REFERENCE": "SC2/10"
      }
    },
    "filer_committee_id_number": {
      "title": "FILER COMMITTEE ID NUMBER",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 9,
      "pattern": "^(?:[PC][0-9]{8}|[HS][0-9]{1}[A-Z]{2}[0-9]{5})$",
      "examples": ["C00123456"],
      "fec_spec": {
        "COL_SEQ": 2,
        "FIELD_DESCRIPTION": "FILER COMMITTEE ID NUMBER",
        "TYPE": "A/N-9",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "C00123456"
      }
    },
    "transaction_type_identifier": {
      "title": "TRANSACTION TYPE IDENTIFIER",
      "description": "",
      "const": "C2_LOAN_GUARANTOR",
      "examples": ["C2_LOAN_GUARANTOR"],
      "fec_spec": {
        "FIELD_DESCRIPTION": "TRANSACTION TYPE IDENTIFIER",
        "TYPE": "A/N-12",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "C2_LOAN_GUARANTOR"
      }
    },
    "transaction_id": {
      "title": "TRANSACTION ID NUMBER",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 20,
      "pattern": "^[ -~]{0,20}$",
      "examples": ["C123456789-3456-001"],
      "fec_spec": {
        "COL_SEQ": 3,
        "FIELD_DESCRIPTION": "TRANSACTION ID NUMBER",
        "TYPE": "A/N-20",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "C123456789-3456-001",
        "RULE_REFERENCE": "must be unique and UPPER CASE for the life of the report (original + all amendments)",
        "NOTE": "May be a combination of Parent SC/ TranID + a unique ID for this Child SC2/ record"
      }
    },
    "back_reference_tran_id_number": {
      "title": "BACK REFERENCE TRAN ID NUMBER",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 20,
      "pattern": "^[ -~]{0,20}$",
      "examples": ["C123456789-3456"],
      "fec_spec": {
        "COL_SEQ": 4,
        "FIELD_DESCRIPTION": "BACK REFERENCE TRAN ID NUMBER",
        "TYPE": "A/N-20",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "C123456789-3456",
        "RULE_REFERENCE": "Reference to the Tran ID of a Related SC/{***} Record",
        "NOTE": "References the associated SC transaction Loan Received"
      }
    },
    "guarantor_last_name": {
      "title": "GUARANTOR LAST NAME",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "pattern": "^[ -~]{0,30}$",
      "examples": ["Smith"],
      "fec_spec": {
        "COL_SEQ": 5,
        "FIELD_DESCRIPTION": "GUARANTOR LAST NAME",
        "TYPE": "A/N-30",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "Smith",
        "NOTE": "IND only, no ENTITY field needed"
      }
    },
    "guarantor_first_name": {
      "title": "GUARANTOR FIRST NAME",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 20,
      "pattern": "^[ -~]{0,20}$",
      "examples": ["John"],
      "fec_spec": {
        "COL_SEQ": 6,
        "FIELD_DESCRIPTION": "GUARANTOR FIRST NAME",
        "TYPE": "A/N-20",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "John"
      }
    },
    "guarantor_middle_name": {
      "title": "GUARANTOR MIDDLE NAME",
      "description": "",
      "type": ["string", "null"],
      "minLength": 0,
      "maxLength": 20,
      "pattern": "^[ -~]{0,20}$",
      "examples": ["W"],
      "fec_spec": {
        "COL_SEQ": 7,
        "FIELD_DESCRIPTION": "GUARANTOR MIDDLE NAME",
        "TYPE": "A/N-20",
        "SAMPLE_DATA": "W"
      }
    },
    "guarantor_prefix": {
      "title": "GUARANTOR PREFIX",
      "description": "",
      "type": ["string", "null"],
      "minLength": 0,
      "maxLength": 10,
      "pattern": "^[ -~]{0,10}$",
      "examples": ["Dr"],
      "fec_spec": {
        "COL_SEQ": 8,
        "FIELD_DESCRIPTION": "GUARANTOR PREFIX",
        "TYPE": "A/N-10",
        "SAMPLE_DATA": "Dr"
      }
    },
    "guarantor_suffix": {
      "title": "GUARANTOR SUFFIX",
      "description": "",
      "type": ["string", "null"],
      "minLength": 0,
      "maxLength": 10,
      "pattern": "^[ -~]{0,10}$",
      "examples": ["Jr"],
      "fec_spec": {
        "COL_SEQ": 9,
        "FIELD_DESCRIPTION": "GUARANTOR SUFFIX",
        "TYPE": "A/N-10",
        "SAMPLE_DATA": "Jr"
      }
    },
    "guarantor_street_1": {
      "title": "GUARANTOR STREET 1",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 34,
      "pattern": "^[ -~]{0,34}$",
      "examples": ["123 Main Street"],
      "fec_spec": {
        "COL_SEQ": 10,
        "FIELD_DESCRIPTION": "GUARANTOR STREET 1",
        "TYPE": "A/N-34",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "123 Main Street"
      }
    },
    "guarantor_street_2": {
      "title": "GUARANTOR STREET 2",
      "description": "",
      "type": ["string", "null"],
      "minLength": 0,
      "maxLength": 34,
      "pattern": "^[ -~]{0,34}$",
      "fec_spec": {
        "COL_SEQ": 11,
        "FIELD_DESCRIPTION": "GUARANTOR STREET 2",
        "TYPE": "A/N-34"
      }
    },
    "guarantor_city": {
      "title": "GUARANTOR CITY",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "pattern": "^[ -~]{0,30}$",
      "examples": ["Anytown"],
      "fec_spec": {
        "COL_SEQ": 12,
        "FIELD_DESCRIPTION": "GUARANTOR CITY",
        "TYPE": "A/N-30",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "Anytown"
      }
    },
    "guarantor_state": {
      "title": "GUARANTOR STATE",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 2,
      "pattern": "^[ -~]{0,2}$",
      "examples": ["WA"],
      "fec_spec": {
        "COL_SEQ": 13,
        "FIELD_DESCRIPTION": "GUARANTOR STATE",
        "TYPE": "A-2",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": "WA",
        "VALUE_REFERENCE": "AK,AL,...,ZZ",
        "RULE_REFERENCE": "Edit: ST"
      }
    },
    "guarantor_zip": {
      "title": "GUARANTOR ZIP",
      "description": "",
      "type": "string",
      "minLength": 1,
      "maxLength": 9,
      "pattern": "^[ -~]{0,9}$",
      "examples": [981110123],
      "fec_spec": {
        "COL_SEQ": 14,
        "FIELD_DESCRIPTION": "GUARANTOR ZIP",
        "TYPE": "A/N-9",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": 981110123
      }
    },
    "guarantor_employer": {
      "title": "GUARANTOR EMPLOYER",
      "description": "",
      "type": ["string", "null"],
      "minLength": 0,
      "maxLength": 38,
      "pattern": "^[ -~]{0,38}$",
      "examples": ["XYZ Company"],
      "fec_spec": {
        "COL_SEQ": 15,
        "FIELD_DESCRIPTION": "GUARANTOR EMPLOYER",
        "TYPE": "A/N-38",
        "REQUIRED": "X (conditional error)",
        "SAMPLE_DATA": "XYZ Company",
        "RULE_REFERENCE": "Req if Guaranteed amount > 200"
      }
    },
    "guarantor_occupation": {
      "title": "GUARANTOR OCCUPATION",
      "description": "",
      "type": ["string", "null"],
      "minLength": 0,
      "maxLength": 38,
      "pattern": "^[ -~]{0,38}$",
      "examples": ["QC Inspector"],
      "fec_spec": {
        "COL_SEQ": 16,
        "FIELD_DESCRIPTION": "GUARANTOR OCCUPATION",
        "TYPE": "A/N-38",
        "REQUIRED": "X (conditional error)",
        "SAMPLE_DATA": "QC Inspector",
        "RULE_REFERENCE": "Req if Guaranteed amount > 200"
      }
    },
    "guaranteed_amount": {
      "title": "GUARANTEED AMOUNT",
      "description": "",
      "type": "number",
      "minimum": -99999999.99,
      "maximum": 999999999.99,
      "examples": [250],
      "fec_spec": {
        "COL_SEQ": 17,
        "FIELD_DESCRIPTION": "GUARANTEED AMOUNT",
        "TYPE": "AMT-12",
        "REQUIRED": "X (error)",
        "SAMPLE_DATA": 250
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "guaranteed_amount": {
            "type": "number",
            "minimum": 200.01
          }
        },
        "required": ["guaranteed_amount"]
      },
      "then": {
        "required": ["guarantor_employer", "guarantor_occupation"],
        "properties": {
          "guarantor_employer": {
            "type": "string",
            "minLength": 1
          },
          "guarantor_occupation": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  ]
}
